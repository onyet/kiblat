<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Top Section: Qibla Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Small Qibla Arrow (Left) -->
        <ImageView
            android:id="@+id/qibla_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_qibla_arrow"
            android:scaleType="fitCenter"
            android:contentDescription="@string/widget_name" />

        <!-- Qibla Info (Right of Arrow) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Degree Info -->
            <TextView
                android:id="@+id/qibla_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0° N"
                android:textColor="#D4AF37"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="295° NW" />

            <!-- Location (small text below) -->
            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Buka app untuk update"
                android:textColor="#888888"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Jakarta, Indonesia" />
        </LinearLayout>

        <!-- Refresh Button -->
        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:padding="2dp"
            android:contentDescription="@string/widget_name" />
    </LinearLayout>

    <!-- Gold Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D4AF37" />

    <!-- Bottom Section: Prayer Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Current Prayer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/current_prayer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now: "
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/current_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Dhuhr" />

            <TextView
                android:id="@+id/current_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="--:--"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="12:05" />
        </LinearLayout>

        <!-- Vertical Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#33D4AF37" />

        <!-- Next Prayer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/next_prayer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next: "
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Asr" />

            <TextView
                android:id="@+id/next_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="--:--"
                android:textColor="#D4AF37"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="15:30" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
